<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <% if can? :manage, :all %>
  <div class="field">
    <%= f.label :role_id %><br>
    <%= f.text_field :role_id, placeholder: "Admin or Volunteer" %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <% if current_user.id == @user.id %> 
    <%= link_to "Change Password", edit_user_password_path(current_user) %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
