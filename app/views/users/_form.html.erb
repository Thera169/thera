<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <% if can? :manage, :all %>
  <div class="field center-block">
    <%= f.label :role_id %>
    <br>

    <%= f.radio_button(:role_id, "Admin", checked: true) %>
    <%= label_tag(:role_id_admin, "Admin") %>

    <%= f.radio_button(:role_id, "Volunteer") %>
    <%= label_tag(:role_id_admin, "Volunteer") %>

  </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
 <div class="field">
    <%= f.label :password, "New password" %><br />
    (Must be at least 8 characters long.)
    <br>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
