

<h1>Listing Users</h1>
<%= link_to 'New User', new_user_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="user_list">
    <tr>
      <td>Me (<%= current_user.name %>) </td>
      <td><%= current_user.role.name %></td>
      <td><%= current_user.email %></td>
      <td><%= button_to 'Edit', edit_user_path(current_user), :method => :get%></td>
      <td><%= button_to 'Destroy', current_user, method: :delete, data: { confirm: "Are you sure?" }  %></td>
    </tr>
    <% @users.each do |user| %>
      <% if user != current_user %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role.name %></td>
          <td><div class="<%= user.email.gsub(/[^A-Za-z0-9]/,'')%>_edit"><%= button_to 'Edit', edit_user_path(user), :method => :get %></div></td>
          <td><div class="<%= user.email.gsub(/[^A-Za-z0-9]/,'')%>_destroy"><%= button_to 'Destroy', user_path(user), method: :delete, data: { confirm: "Are you sure?" }   %></div></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


