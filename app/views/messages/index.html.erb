<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>
Conversation last updated on <%= @conversation.updated_at %>
<br>
Volunteer: <%= @conversation.recipient.name %>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @messages.any? %>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.user.name %> said:</td>
          <td><%= message.body %></td>
        </tr>
      <% end %>
    <% else %>
    <br>
      There are no messages for this conversation.
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to Admin Dashboard', users_path %>
